<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Babak Taremi</Authors>
    <Version>2.0.0</Version>
    <Description>Simple Package for using google captcha in blazor web assembly</Description>
    <PackageProjectUrl>https://github.com/babaktaremi/GoogleCaptchaComponent</PackageProjectUrl>
	  <PackageIcon>icon.jpg</PackageIcon>
    <RepositoryUrl>https://github.com/babaktaremi/GoogleCaptchaComponent</RepositoryUrl>
    <PackageTags>blazor,blazor captcha, Net6, wasm, blazor google captcha</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="C:\Users\babak\Downloads\Google Captcha\icon.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="wwwroot\Scripts\JsOfReCAPTCHA.js" />
    <None Include="wwwroot\Scripts\ScriptLoader.js" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="6.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.1" />
  </ItemGroup>
</Project>
